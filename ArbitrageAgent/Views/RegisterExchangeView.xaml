<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArbitrageAgent.Views.RegisterExchangeView">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label 
                Text="Exchange Name"/>
            <Entry 
                x:Name="ExchangeNameEntry"
                Placeholder="Enter exchange name" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label 
                Text="API Key"/>
            <Entry 
                x:Name="ApiKeyEntry"
                Placeholder="Enter API key"
                IsEnabled="False"
                ToolTipProperties.Text="Unavailable in demo version"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label 
                Text="API Address"/>
            <Entry 
                x:Name="ApiAddressEntry"
                Placeholder="Enter API Address"
                IsEnabled="False"
                ToolTipProperties.Text="Unavailable in demo version"/>
        </HorizontalStackLayout>
        <Button Text="Register Exchange"
            Clicked="OnRegisterExchangeClicked"/>
        <Button Text="Cancel" Clicked="OnCacelExchangeClicked"/>
    </VerticalStackLayout>
</ContentView>
