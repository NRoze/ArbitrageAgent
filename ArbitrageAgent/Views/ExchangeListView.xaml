<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArbitrageAgent.Views.ExchangeListView">
    <VerticalStackLayout>
        <CollectionView ItemsSource="{Binding Exchanges}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedExchange}" >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="5" Margin="0">
                        <Label Text="{Binding Name}" VerticalOptions="Center" FontAttributes="Bold"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentView>
