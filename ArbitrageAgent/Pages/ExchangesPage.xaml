<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArbitrageAgent.Pages.ExchangesPage"
             xmlns:views="clr-namespace:ArbitrageAgent.Views">

    <Grid RowDefinitions="auto,*" ColumnDefinitions="auto,auto,auto" Padding="10" RowSpacing="10"
          ColumnSpacing="10">
            <Label Text="Exchanges" Style="{StaticResource PageTitleStyle}"/>
            <views:ExchangeListView Grid.Row="1" BindingContext="{Binding}"/>
            <BoxView WidthRequest="1" Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"/>
            <ScrollView Grid.Row="1" Grid.Column="2">
                <views:ExchangeHolderView BindingContext="{Binding SelectedExchange}" Grid.Row="1" Grid.Column="2"/>
            </ScrollView>
    </Grid>
</ContentPage>